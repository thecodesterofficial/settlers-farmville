import java.util.ArrayList;
import java.util.List;



public class GameBoard {
	List<Hex> hexes = new ArrayList<Hex>();
	
	
	
	private void AddNumberOfHexType(Hex.HexType type, int number)
	{
		for(int i = 0; i < number; i++)
		{
			hexes.add(new Hex(type));
		}
	}
	
	private void InitHexes()
	{
		AddNumberOfHexType(Hex.HexType.SAND, 1);
		AddNumberOfHexType(Hex.HexType.BRICK, 3);
		AddNumberOfHexType(Hex.HexType.STONE, 3);
		AddNumberOfHexType(Hex.HexType.LUMBER, 4);
		AddNumberOfHexType(Hex.HexType.WHEAT, 4);
		AddNumberOfHexType(Hex.HexType.SHEEP, 4);
	}
	private void Init()
	{
		InitHexes();
	}
	public GameBoard()
	{
		Init();
	}
	
}
