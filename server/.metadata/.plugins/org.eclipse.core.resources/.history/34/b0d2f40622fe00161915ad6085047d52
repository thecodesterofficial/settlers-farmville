import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;

public class KatanServer extends Thread {
	private String username;
	private int id;
	private Socket connection;
	PrintWriter out;
	BufferedReader in;
	public KatanServer( Socket connection , int id ) throws IOException {
        this.id = id;
        this.connection = connection;
        
        out = new PrintWriter(this.connection.getOutputStream(), true);
        in =  new BufferedReader(new InputStreamReader(this.connection.getInputStream()));
        start();
    }

    @Override
    public void run() {
         while( !this.interrupted() ) {
        	 try
        	 {
        		 if(this.connection.isClosed())
        		 {
        			 System.out.println("Closed");
        		 }
        		 String data = in.readLine();
        		 process(data);
        		// process(in.readLine());
        	 }
        	 catch(Exception e)
        	 {
        		 System.out.println("m31: " + e.getMessage());
        	 }
             
         }
    }

    
    public void process( String message ) {
    	if(message.equals("roll dice"))
    	{
    		System.out.println("HEREE");
    		out.println("roll dice 2");
    	}
    	System.out.println("message: " + message);
    }

   
    public void close() {
        try {
             this.connection.close();
             
        } catch ( IOException e ) {
             
        }
    }
}
